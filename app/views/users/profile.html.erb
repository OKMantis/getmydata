<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>My Profile</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="flexdashboard">
        <div class="flexdashboarditems">
          <h3>My personal data</h3>
          <ul>
            <li>Name: <%= @user.first_name %> <%= @user.last_name %></li>
            <li>Email: <%= @user.email %></li>
          </ul>
          <%= link_to "Edit", edit_user_registration_path, :class => "btn" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div>
  <%= simple_form_for(user) do |f| %>
    <%= f.input :identification %>
    <%= f.input :identification_cache, as: :hidden %>
  <% end %>
</div>

<div>
  <%= cl_image_tag @user.identification, height: 300, width: 400, crop: :fill %>
</div>

<div class="profile-divbutton">
  <%= link_to "Download My Data", profile_path(@user, format: "pdf"), :class=>"profile-databutton" %>
</div>
