<div class="container full-height">
  <div class="row div-margin-top">
    <div class="col-sm-offset-2 col-sm-7">
      <div class="flexcontainer">
        <div class="flexform">

          <h3> Select companies and get your data! </h3>

          <div class="search">
            <%= form_tag companies_path+'#target-div', method: :get do %>
            <%= text_field_tag :query, params[:query], class: "select-search" %>
            <button type="sumbit" class="btn-search"><i class="fa fa-search"></i></button>
            <% end %>
          </div>

          <div id="target-div">
            <% selection_array = [] %>
            <h3>Companies</h3>
            <% if @user_selections.present? %>
              <% @user_selections.each do |selection| %>
                <% selection_array << selection.company_id %>
              <% end %>
              <% @companies.sort_by {|company| company.name.downcase}.each do |company| %>
                <% if !selection_array.include?(company.id)  %>
                  <%= render partial: "shared/select-company", locals: { company: company, user_selection: @user_selection } %>
                <% end %>
              <% end %>
            <% else %>
              <% @companies.sort_by {|company| company.name.downcase}.each do |company| %>
                  <%= render partial: "shared/select-company", locals: { company: company, user_selection: @user_selection } %>
              <% end %>
            <% end %>
            <h3> Can't find a company? Add it! </h3>
            <%= link_to "Add company", new_company_path, :class => "btn" %>
          </div>

        </div>
      </div>
    </div>
    <div class="col-sm-offset-1 col-sm-2">
      <div>
        <h3>Selected organizations</h3>

        <ul class="select-list">
          <% if @user_selections.present? %>
          <% @user_selections.each do |selection| %>
            <li><%= selection.company.name.sub(/^./, &:upcase) %>
                <%= link_to destroy_user_selections_path(selection.id), :method => :delete do %>
                <i class="fa fa-times-circle"></i>
                <% end %>
            </li>
          <% end %>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="float-parent">
<%= link_to root_path, :class => "btn btn-left", :id => "stickybutton-left" do %>
Home
<% end %>

<%= link_to sendmessages_path, :class => "btn btn-right", :id => "stickybutton-right" do %>
Next
<% end %>
</div>
