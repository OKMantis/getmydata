<div class="flexcontainer full-height edit-form">
  <div class="flexform div-margin-top">
    <div class="form">
      <div id="login">
       <h2>My Profile</h2>
       <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
       <%= f.error_notification %>
       <div class="form-inputs ">
        <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false, input_html: { class: "Email" } %>
        <%= f.input :first_name, required: true, autofocus: true, label: false %>
        <%= f.input :last_name, autofocus: true, label: false %>
        <%= cl_image_tag current_user.avatar, class: "profile-avatar" %>
        <%= f.input :avatar, label: false %>
        <%= f.input :avatar_cache, as: :hidden %>
        <%= cl_image_tag @user.identification, height: 300, width: 400, crop: :fill %>
        <%= f.input :identification, label: false %>
        <%= f.input :identification_cache, as: :hidden %>
        <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, label: false, placeholder: "new password" %>
        <%= f.input :password_confirmation, required: false, label: false, placeholder: "confrim password" %>
        <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, label: false, placeholder: "current_password" %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
      <% end %>
      <h3>Cancel my account</h3>
      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      <%= link_to "Back", :back %>
    </div>
    <%#= render "devise/shared/links" %>
  </div>
</div><!-- tab-content -->

</div> <!-- /form -->

</div>
</div>

