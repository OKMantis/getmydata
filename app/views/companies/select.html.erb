<div class="flexcontainer">
  <div class="flexform">

    <h2> Select organisations and get your data! </h2>
    <div class="search">
      <%= form_tag companies_path+'#target-div', method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control"
        %>
        <% end %>
      </div>

      <div id="target-div">
        <% if @companies.any? %>

        <% @companies.each do |company| %>
        <div class="card-dashboard">
        <%= simple_form_for(current_user) do |f| %>

        <p><strong><%= link_to company.name, company_path(company) %></strong></p>
        <p><%= company.email %></p>
        <p><%= company.category %></p>
        <!-- <p><%= company.avatar %></p> -->
        <p><%= company.url %></p>
        <%#= f.check_box :company_id, :value => company.id %>
        <%= f.button :submit, "select" %>
        <% end %>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
