<div class="flexcontainer">
  <div class="flexform">
    <% current_user.user_selections.all.each do |select| %>
    <% @company = Company.find(select.company_id) %>
    <h3>Request data from <%= "#{@company.name.sub(/^./, &:upcase)}" %></h3>
    <%= simple_form_for [@company, @message] do |f| %>
    <%= f.hidden_field :sent_by_user, :value => true %>
    <%= f.input :subject, placeholder: 'user@domain.com', input_html: {text: 'text', value: "Data Subject Access Request", :class => 'form-text' } %>
    <%= f.input :text, as: :text, placeholder: 'user@domain.com', input_html: {text: 'text', value: "Dear Sir/Madam,

My name is #{current_user.first_name} #{current_user.last_name} and I would like to make an access request for a copy of any personal data #{@company.name.sub(/^./, &:upcase)} may have about me.

Thank you in advance.

Best regards,
#{current_user.first_name} #{current_user.last_name}", :class => 'form-text' } %>
    <%= f.hidden_field :sent, :value => true %>
    <%= f.button :submit, "Send message" %>
    <% end %>

    <% end %>
  </div>
</div>

<%= link_to select_path, :class => "wizzard-button btn-left" do %>
Back to select
<% end %>

<%= link_to user_messages_path(current_user), :class => "wizzard-button btn-right" do %>
Send all messages
<% end %>
